{
  "extends": ["@eslint/js/recommended"],
  "rules": {
    "no-inline-styles": "off",
    "@typescript-eslint/no-inline-styles": "off",
    "react/no-inline-styles": "off",
    "no-style-tags": "off",
    "react/forbid-component-props": "off",
    "react/forbid-dom-props": "off"
  },
  "ignorePatterns": ["*.md", "*.markdown"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["*.tsx", "*.ts"],
      "rules": {
        "no-inline-styles": "off",
        "@typescript-eslint/no-inline-styles": "off",
        "react/no-inline-styles": "off",
        "no-style-tags": "off",
        "react/forbid-component-props": "off",
        "react/forbid-dom-props": "off"
      }
    },
    {
      "files": ["*.md", "*.markdown"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off",
        "MD001": "off",
        "MD009": "off",
        "MD026": "off",
        "MD031": "off",
        "MD032": "off",
        "MD022": "off"
      }
    }
  ]
}
